@{
    ViewData["Title"] = "Contacto";
}
    <div class="container">


        <form asp-controller="Home" asp-action="Contacto" class="p-4 rounded">

        <h1 class="text-center mb-4">Formulario de Contacto</h1>
            <div class="mb-3 text-center">
                <label for="nombre" class="form-label fw-bold">Nombre</label>
                <input type="text" class="form-control form-control-sm w-50 mx-auto" id="nombre" name="nombre" placeholder="Ingrese su nombre" />
            </div>
            <div class="mb-3 text-center">
                <label for="email" class="form-label fw-bold">Email</label>
                <input type="email" class="form-control form-control-sm w-50 mx-auto" id="email" name="email" placeholder="usuario@dominio.com" />
            </div>
            <div class="mb-3 text-center">
                <label for="mensaje" class="form-label fw-bold">Mensaje</label>
                <textarea class="form-control form-control-sm w-50 mx-auto" id="mensaje" name="mensaje" rows="3"></textarea>
            </div>
            <div class="d-grid gap-2 col-6 mx-auto">
                <button type="submit" class="btn btn-primary btn-sm">Enviar</button>
            </div>
        </form>
    </div>
